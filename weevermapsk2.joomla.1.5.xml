	<param name="kml_item" type="text" size="20" default="" label="WEEVERMAPSK2_KML" description="WEEVERMAPSK2_KML_DESCRIPTION" />
 </params>

 <languages folder="languages">
	<language tag="en-GB">en-GB.plg_k2_weevermapsk2.ini</language>
	<language tag="en-GB">en-GB.plg_k2_weevermapsk2.sys.ini</language>
 </languages>

 <media destination="plg_weevermapsk2" folder="assets">
